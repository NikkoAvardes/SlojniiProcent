<body>
<div class="container">
<h2>Калькулятор сложного процента</h2>

<label>Начальная сумма:</label><br>
<input type="number" id="principal" value="100" step="0.01"><br>

<label>Дневная ставка (%):</label><br>
<input type="number" id="rate" value="1.8" step="0.01"><br>

<label>Количество дней:</label><br>
<input type="number" id="days" value="30" min="1"><br>

<button onclick="calculate()">Посчитать</button>

<div id="result"></div>
</div>

<script>
function calculate() {
  let P = parseFloat(document.getElementById('principal').value);
  let rate = parseFloat(document.getElementById('rate').value) / 100;
  let days = parseInt(document.getElementById('days').value);
  
  // Проверка на корректность ввода
  if (isNaN(P) || P <= 0) {
    document.getElementById('result').innerHTML = '<span style="color: red;">Ошибка: Введите корректную начальную сумму</span>';
    return;
  }
  
  if (isNaN(rate) || rate < 0) {
    document.getElementById('result').innerHTML = '<span style="color: red;">Ошибка: Введите корректную процентную ставку</span>';
    return;
  }
  
  if (isNaN(days) || days <= 0) {
    document.getElementById('result').innerHTML = '<span style="color: red;">Ошибка: Введите корректное количество дней</span>';
    return;
  }
  
  // Расчет сложного процента: A = P(1 + r)^t
  let A = P * Math.pow(1 + rate, days);
  let profit = A - P;
  
  document.getElementById('result').innerHTML = `
    <div style="color: green; font-weight: bold;">
      <p>Начальная сумма: ${P.toFixed(2)} USDT.</p>
      <p>Через ${days} дней сумма будет: <strong>${A.toFixed(2)} USDT.</strong></p>
      <p>Прибыль: <strong>${profit.toFixed(2)} USDT.</strong></p>
      <p>Прирост: <strong>${((profit/P)*100).toFixed(2)}%</strong></p>
    </div>
  `;
}

// Добавляем возможность расчета по нажатию Enter
document.addEventListener('DOMContentLoaded', function() {
  const inputs = document.querySelectorAll('input');
  inputs.forEach(input => {
    input.addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        calculate();
      }
    });
  });
});
</script>

</body>
